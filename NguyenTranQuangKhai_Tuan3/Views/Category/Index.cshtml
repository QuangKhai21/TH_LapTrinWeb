@model IEnumerable<Category>
<h2>Danh sách danh mục</h2>
<a class="btn btn-success mb-2" asp-action="Add">Thêm danh mục</a>
<table class="table">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1">Chi Tiết</a> |
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
               
                </td>
            </tr>
        }
    </tbody>

</table>
<a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-sm">Quay lại trang chủ</a>
  